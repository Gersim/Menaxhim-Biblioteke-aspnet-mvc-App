@model IEnumerable<Contract>
@{
    ViewData["Tittle"] = "List of Contrats";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</head>
<body>

    <div class="d-flex justify-content-end" style="margin-right:4rem; margin-top: 2rem;">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">+Shto Autor</button>
    </div>

    @*Shfaq te dhenat e modelit *@
    <br />
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Description</th>
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
                <th scope="col">Client</th>
                <th scope="col">Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Description</td>
                    <td class="align-middle">@item.StartDate</td>
                    <td class="align-middle">@item.EndTime</td>
                    <td class="align-middle">@item.ClientId</td>
                    <td class="align-middle">@item.BookId</td>
                    <td class="align-middle">
                        <button class="btn btn-outline-primary">Edit</button>
                        <button class="btn btn-outline-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Shto Librin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div>
                            <input type="text" class="form-control" placeholder="Titulli" aria-label="Titulli">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Pershkrimi" aria-label="Pershkrimi">
                        </div>
                        <br><br>
                        <div>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Zgjedh Zhanrin</option>
                                <option value="1">Aventur</option>
                                <option value="2">Fantazi</option>
                                <option value="3">Fanta-shkence</option>
                                <option value="4">Romance</option>
                                <option value="5">Psikologji</option>
                                <option value="6">Horror</option>
                            </select>
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Autori" aria-label="Autori">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Numri i Librave" aria-label="Zhanri">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Viti i lancimit" aria-label="Viti">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Lokacioni" aria-label="Lokacioni">
                        </div>
                    </div>
                    <br>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
    </div>

</body>
</html>