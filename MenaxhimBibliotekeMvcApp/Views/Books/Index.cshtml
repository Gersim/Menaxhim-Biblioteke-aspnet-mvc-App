@model IEnumerable<Book>
@{
    ViewData["Tittle"] = "List of Books";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</head>
<body>

    <div class="d-flex justify-content-end" style="margin-right:4rem; margin-top: 2rem;">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">+Shto Autor</button>
    </div>

    @*Shfaq te dhenat e modelit *@
    <br />
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Tittle</th>
                <th scope="col">Description</th>
                <th scope="col">Zhanra</th>
                <th scope="col">Number of Books</th>
                <th scope="col">Book Place</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@item.CoverImageUrl" style="max-height:150px">
                    </td>
                    <td class="align-middle">@item.Title</td>
                    <td class="align-middle">@item.Description</td>
                    <td class="align-middle">@item.BookZhanra</td>
                    <td class="align-middle">@item.BookNumbers</td>
                    <td class="align-middle">@item.BookLocation</td>
                    <td class="align-middle">
                        <button class="btn btn-outline-primary">Edit</button>
                        <button class="btn btn-outline-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modali per te shtuar autor -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Shto Kontrat</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div>
                            <input type="text" class="form-control" placeholder="Emri" aria-label="Emri">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Mbiemri" aria-label="Mbiemri">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Pershkrimi" aria-label="Pershkrimi">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Datelindja" aria-label="Datelindja">
                        </div>
                        <br><br>
                        <div>
                            <input type="text" class="form-control" placeholder="Vendlindja" aria-label="Vendlindja">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>